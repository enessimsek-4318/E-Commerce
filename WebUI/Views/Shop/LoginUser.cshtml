@model Entity.User
@{
    ViewBag.Title = "Login";
}
<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to your account</h2>
                    <form method="post">
                        <input type="email" name="emailControl" value="@Model.email" placeholder="Email Address" />
                        <input type="password" name="passwordControl" placeholder="Password" />
                        <span>
                            <input type="checkbox" class="checkbox">
                            Keep me signed in
                        </span>
                        <button type="submit" class="btn btn-default">Login</button>
                    </form>
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>New User Signup!</h2>
                    <form method="post" action="Register">
                        @Html.ValidationSummary(false)
                        <input type="text" name="name" value="@Model.name" placeholder="Name" />
                        <input type="text" name="surname" value="@Model.surname" placeholder="Surname" />
                        <input type="email" name="email" value="@Model.email" placeholder="Email Address" />
                        <input type="password" name="password" value="@Model.password" placeholder="Password" />
                        <input type="text" name="phoneNumber" value="@Model.phoneNumber" placeholder="Phone Number" />
                        <button type="submit" class="btn btn-default">Signup</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
