@model IEnumerable<Entity.Product>

@{
    ViewBag.Title = "ProductList";
}
@{ 
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}


<div class="container">
    <h2>Product List</h2>
    <p>
        @Html.ActionLink("Create New", "ProductSave")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stockNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productPhoto)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productBrand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stockNumber)
                </td>
                <td>
                    <img src="@item.productPhoto" width="80" height="100" />
                </td>
                <td>
                    <a href="/Admin/ProductEdit/@item.productId" class="btn btn-warning">
                        <i class="fas fa-user-edit"></i>
                    </a>
                    <a href="/Admin/ProductDelete/@item.productId" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>