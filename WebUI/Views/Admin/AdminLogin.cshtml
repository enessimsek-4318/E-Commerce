@model Entity.Admin
<section id="form">
    <!--form-->
    <div class="container">
        <div class="col-sm-8 col-md-6 col-lg-4 col-lg-offset-4 col-md-offset-3 col-sm-offset-2">
            <div class="login-form">
                <!--Admin login form-->
                <h2>Login to your admin account</h2>
                <form method="post">
                    <input type="email" name="adminName" value="@Model.adminName" placeholder="Admin Email" />
                    <input type="password" name="password" placeholder="Password" />
                    <button type="submit" class="btn btn-default">Admin Login</button>
                </form>
            </div><!--/Admin login form-->
        </div>
    </div>
</section><!--/form-->